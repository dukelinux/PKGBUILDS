# Maintainer: Steven Medley <smedley76[at]live[dot]com>

pkgname=dukelinux-keyring
pkgver=1
pkgrel=1
pkgdesc="dukelinux PGP keyring"
arch=('any')
url="https://github.com/dukelinux/dukelinux-keyring"
license=('GPL-3.0-or-later')
depends=('pacman')
makedepends=('git')
install="${pkgname}.install"
source=('git+https://github.com/dukelinux/dukelinux-keyring.git')
sha256sums=('SKIP')
pkgver() {
  cd "$srcdir/dukelinux-keyring"
  git log -1 --format=%cd --date=format:%Y%m%d
}

package() {
  cd "$srcdir/dukelinux-keyring"
  make DESTDIR="$pkgdir" install
}
